{
	"manifest_version": 2,
	"name": "Tasks Panel",
	"version": "1.0",
	"author": "me@boku.ru",
	"description": "Open Tasks panel in sidebar.",
	"homepage_url": "https://github.com/himselfv/tasks-ig",
	"permissions": [
		"storage",
		"clipboardWrite"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
	"sidebar_action": {
		"default_icon": "extension/check2.png",
		"default_title": "Tasks",
		"default_panel": "index.html",
		"browser_style": false
	},
	"browser_action": {
		"default_title": "Open Tasks IG",
		"default_icon": "extension/check2.png",
		"browser_style": true
	},
	"icons": {
		"16": "extension/check2.png"
	}
}